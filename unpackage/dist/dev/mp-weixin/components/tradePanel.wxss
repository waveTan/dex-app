
.trade-inner .tab {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	text-align: center;
}
.trade-inner .tab .buy {
	color: #ffffff;
	font-weight: bold;
	width: 50%;
	height: 70rpx;
	line-height: 70rpx;
}
.trade-inner .tab .sell {
	color: #ffffff;
	font-weight: bold;
	width: 50%;
	height: 70rpx;
	line-height: 70rpx;
}
.trade-inner .tab .normal {
	background: #ECECF6;
	color: #555555;
	font-weight: bold;
}
.trade-inner .tab .parallelogram {
	position: absolute;
	left: calc(50% - 19rpx);
	top: 0;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	width: 36rpx;
	height: 74rpx;
	background: #ffffff;
	-webkit-transform: skew(-30deg);
	transform: skew(-30deg);
}
.trade-inner .price-input {
	position: relative;
	margin-top: 30rpx;
}
.trade-inner .price-input input {
	position: relative;
	padding-right: 180rpx;
}
.trade-inner .price-input .opt {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: absolute;
	top: 2rpx;
	right: 0;
	width: 180rpx;
	height: 78rpx;
	line-height: 78rpx;
}
.trade-inner .num-input {
	position: relative;
	margin-top: 30rpx;
}
.trade-inner .price-input .opt .button {
	border: 0;
	background: #fff;
	width: 80rpx;
	height: 78rpx;
	line-height: 78rpx;
	text-align: center;
	font-size: 48rpx;
	font-weight: 400;
}
.trade-inner .btn {
	height: 74rpx;
	line-height: 74rpx;
	color: #fff;
	font-size: 28rpx;
	font-weight: bold;
	margin-top: 30rpx;
}

